{
  "name": "@beamerstream/desktop",
  "description": "Lyrcis projection software",
  "version": "1.0.0",
  "author": "Appinda",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=develop electron .",
    "start": "electron .",
    "packs": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "26.2.4",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "nl.appinda.beamerstream",
    "files": [
      "**/*",
      {
        "from": "../server/dist",
        "to": "server",
        "filter": [
          "**/*",
          "!**/*.d.ts",
          "!**/*.map"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "../control/dist",
        "to": "./resources/ui",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "productName": "Beamerstream",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}